# ============================================
# Django Core Settings
# ============================================
DJANGO_SECRET_KEY=your-secure-random-secret-key-here-generate-with-python
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================
# Database Configuration
# ============================================
# Use 'postgresql' for production, 'sqlite3' for local development
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=school_manager
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ============================================
# JWT Token Settings
# ============================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ============================================
# R2/S3 Storage Configuration
# ============================================
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_BUCKET_NAME=

# ============================================
# Redis Configuration (for caching & Celery)
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Email Configuration
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
