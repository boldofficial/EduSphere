# =============================================================================
# REGISTRA PRODUCTION ENVIRONMENT TEMPLATE (.env)
# =============================================================================

# 1. DATABASE (PostgreSQL)
# These are used by the 'db' container and Django
POSTGRES_DB=registra_db
POSTGRES_USER=registra_admin
POSTGRES_PASSWORD=your_secure_password_here
# INTERNAL URL for Django to connect to the db service
DATABASE_URL=postgres://registra_admin:your_secure_password_here@db:5432/registra_db

# 2. REDIS & CELERY
# Used by the 'redis' container, Django, and Celery workers
# redis:6379 is the internal docker-compose service name
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# 3. BACKEND (Django)
DEBUG=False
DJANGO_SECRET_KEY=your_shhh_secret_key_here
ALLOWED_HOSTS=myregistra.net,.myregistra.net
CORS_ALLOWED_ORIGINS=https://myregistra.net
ROOT_DOMAIN=myregistra.net

# 4. FRONTEND (Next.js)
# Next.js frontend needs to talk to the backend service internally
DJANGO_API_URL=http://backend:8000
NEXT_PUBLIC_ROOT_DOMAIN=myregistra.net
NEXT_TELEMETRY_DISABLED=1

# 5. STORAGE (Cloudflare R2) - KEPT FROM PREVIOUS SETUP
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_ENDPOINT=your-cloudflare-r2-endpoint
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-public-url.com

# 6. AI (Google Gemini)
GEMINI_API_KEY=your-api-key-here

# 7. SENTRY (Optional)
# SENTRY_DSN=https://your-sentry-dsn
